<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ma.enset.presentation.controllers.LoginController"
      alignment="CENTER" padding="20">
    <Label text="Admin Login" styleClass="title-label" />
    <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
    <Button text="Login" onAction="#handleLogin" styleClass="action-button" />
    <Hyperlink text="Don't have an account? Register here" onAction="#handleRegister" />
</VBox>


